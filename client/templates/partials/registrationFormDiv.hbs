#registrationFormDiv {
    width: 100%;
    max-width: 400px;
    padding: 20px;
    margin: 0 auto;
    background-color: var(--surface);
    border-radius: 4px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
}

#registrationFormDiv form div:not(:last-child) {
    margin-bottom: 10px;
}

#registrationFormDiv input,
#registrationFormDiv select {
    width: 100%;
    padding: 10px;
    border: 1px solid var(--primary);
    border-radius: 4px;
    font-size: 1rem;
    color: var(--on-primary);
    background-color: var(--background);
}

#registrationFormDiv button {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    color: var(--on-primary);
    background-color: var(--primary);
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    outline: none;
    box-shadow: none;
}

#registrationFormDiv button:hover {
    background-color: var(--secondary);
    transform: translateY(-3px);
}

#registrationFormDiv button:active {
    background-color: var(--accent);
    transform: translateY(1px);
}