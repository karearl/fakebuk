<!-- resetPasswordForm.hbs -->
<div id="resetPassword">
    <form action="/resetPassword" method="POST">
        {{> form id="resetToken" label="Reset Token" name="resetToken" type="text" placeholder="Enter your reset token" required=true readonly=true}}
        {{> form id="newPassword" label="New Password" name="newPassword" type="password" placeholder="Enter your new password" required=true autofocus=true pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" oninvalid="this.setCustomValidity('Password length must be at least 8 characters.\nPassword must contain at least one uppercase letter.\nPassword must contain at least one lowercase letter.\nPassword must contain at least one number.')" oninput="this.setCustomValidity('')"}}
        <div>
            <button id="resetButton" disabled>Reset</button>
        </div>
        <div id="timer" style="font-size: 1.2em; font-weight: bold;"></div>
        <div id="expiredMessage" style="display: none;">Your reset token has expired. Please request a new one.</div>
    </form>
</div>