<!-- checkEmailExists.hbs -->
$("#newEmail").on('keyup', function(){
    var email = $(this).val();
    var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Simple email regex
    if (!email || !emailRegex.test(email)) {return;}
    $.ajax({
        url: "/checkEmailExists",
        type: "POST",
        data: JSON.stringify({ email: email }),
        contentType: "application/json",
        success: function(data){
            console.log(email, JSON.parse(data));
        
            if(JSON.parse(data).emailExists){
                $("#newEmailError").show();
                $('#newEmailError').text('This email is already in use.');
                $('#submit').prop('disabled', true);
                $('#submit').css('cursor', 'not-allowed');
            } else {
                $("#newEmailError").hide();
                $('#newEmailError').text('');
                $('#submit').prop('disabled', false);
                $('#submit').css('cursor', 'pointer');
            }
        }
    });
});