<!-- forgotPasswordForm.hbs -->
<form id="forgotPasswordFormDiv" method="POST"
    class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-gray-800 text-white px-4 py-4 rounded-lg shadow-md z-50 w-full max-w-lg">
    <div class="mb-2">
        <label for="forgotEmail" class="block mb-2 sr-only">Email:</label>
        <input id="forgotEmail" name="forgotEmail" type="email" placeholder="Im.not@smart.com" required autofocus autocomplete="email"
            class="w-full h-10 px-3 mt-1 placeholder-gray-400 bg-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent">
    </div>
    <div class="flex space-x-2">
        <button onclick="window.location.href = '/login'"
            class="inline-flex items-center justify-center w-full h-10 px-4 mt-2 text-sm font-medium text-teal-500 bg-transparent ring-1 ring-gray-500 rounded-md hover:bg-gray-700">Submit</button>
        <a onclick="window.location.href = '/login'" class="inline-flex items-center justify-center w-full h-10 px-4 mt-2 text-sm font-medium text-teal-500 bg-transparent ring-1 ring-gray-500 rounded-md hover:bg-gray-700">Cancel</a>
    </div>
</form>